<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#283149">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button10"
            android:layout_width="146dp"
            android:layout_height="88dp"
            android:background="@drawable/button_background"
            android:onClick="openProfile"
            android:text="Profile"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.939"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button16"
            android:layout_width="146dp"
            android:layout_height="88dp"
            android:background="@drawable/button_background"
            android:onClick="openFeedback"
            android:text="Feedback and CopyRight"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.939"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button10" />

        <Button
            android:id="@+id/button14"
            android:layout_width="146dp"
            android:layout_height="88dp"
            android:background="@drawable/button_background"
            android:onClick="openImages"
            android:text="Photo Gallery"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toStartOf="@id/button10"
            app:layout_constraintHorizontal_bias="0.158"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button11"
            android:layout_width="146dp"
            android:layout_height="88dp"
            android:background="@drawable/button_background"
            android:onClick="openCalandar"
            android:text="Calendar"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.939"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button16" />

        <Button
            android:id="@+id/button17"
            android:layout_width="148dp"
            android:layout_height="87dp"
            android:background="@drawable/button_background"
            android:onClick="Map"
            android:text="Map"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toStartOf="@id/button14"
            app:layout_constraintHorizontal_bias="0.159"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button4"
            android:layout_width="146dp"
            android:layout_height="88dp"
            android:background="@drawable/button_background"
            android:onClick="Contacts"
            android:text="Contact Teachers"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.939"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button11" />

        <Button
            android:id="@+id/button7"
            android:layout_width="147dp"
            android:layout_height="84dp"
            android:background="@drawable/button_background"
            android:onClick="SharePhoto"
            android:text="Request to Share Photo"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toStartOf="@id/button17"
            app:layout_constraintHorizontal_bias="0.159"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button4" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="139dp"
            android:layout_height="133dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.154"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.279"
            app:srcCompat="@drawable/logo" />

        <Button
            android:id="@+id/button12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.079" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
